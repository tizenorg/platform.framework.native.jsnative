  @@@ 4 type: 0                       //internal
  @@@ 5 state: 0                      //mounted
  @@@ 6 path: /home/owner/content     //absolute path
  @@@ 7 size: 11657433088             //unit:bytes
  @@@ 8 space: 11524968448
  
  @@@ 2 index: 1
  @@@ 3 storage_id: 1
  @@@ 4 type: 1
  @@@ 5 state: -1
